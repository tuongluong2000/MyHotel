@using Model.Entities;
@{
    var roomTypes = ViewBag.RoomTypes as List<RoomType>;
}


<!-- Hero Section Begin -->
<section class="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="hero-text">
                    <h1>Sona A Luxury Hotel</h1>
                    <p>
                        Here are the best hotel booking sites, including recommendations for international
                        travel and for finding low-priced hotel rooms.
                    </p>
                </div>
            </div>
            <div class="col-xl-4 col-lg-5 offset-xl-2 offset-lg-1">
                <div class="booking-form">
                    <h3>Booking Your Hotel</h3>
                    <form action="#">
                        <div class="check-date">
                            <label for="date-in">Check In:</label>
                            <input type="text" class="date-input" id="txtCheckIn">
                            <i class="icon_calendar"></i>
                        </div>
                        <div class="check-date">
                            <label for="date-out">Check Out:</label>
                            <input type="text" class="date-input" id="txtCheckOut">
                            <i class="icon_calendar"></i>
                        </div>
                        <div class="select-option">
                            <label>RoomNo:</label>
                            <select id="txtRoomType">
                                @foreach (var item in roomTypes)
                                {
                                    <option value="@item.ID">@item.Name</option>
                                }
                            </select>
                        </div>
                        <div class="check-date">
                            <label>GuessName:</label>
                            <input type="text" class="" id="txtGuessName">
                        </div>
                        <div class="check-date">
                            <label>Email:</label>
                            <input type="text" class="" id="txtEmail">
                        </div>
                        <div class="check-date">
                            <label>PhoneNo:</label>
                            <input type="text" class="" id="txtPhoneNo">
                        </div>
                        <button type="submit" id="btnBooking">Booking</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="hero-slider owl-carousel">
        <div class="hs-item set-bg" data-setbg="/Theme/img//hero/hero-1.jpg"></div>
        <div class="hs-item set-bg" data-setbg="/Theme/img//hero/hero-2.jpg"></div>
        <div class="hs-item set-bg" data-setbg="/Theme/img//hero/hero-3.jpg"></div>
    </div>
</section>
<!-- Hero Section End -->
