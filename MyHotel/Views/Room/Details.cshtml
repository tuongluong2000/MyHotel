@using Model.Entities;
@model RoomType

<!-- Breadcrumb Section Begin -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>Our Rooms</h2>
                    <div class="bt-option">
                        <a href="/">Home</a>
                        <span>Rooms</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section End -->
<!-- Room Details Section Begin -->
<section class="room-details-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="room-details-item">
                    <img src="http://localhost:64985/@Model.Image" alt="">
                    <div class="rd-text">
                        <div class="rd-title">
                            <h3>@Model.Name</h3>
                        </div>
                        <h2>@Model.Price$<span>/Pernight</span></h2>
                        <table>
                            <tbody>
                                <tr>
                                    <td class="r-o">Size:</td>
                                    <td>@Model.Size ft</td>
                                </tr>
                                <tr>
                                    <td class="r-o">Capacity:</td>
                                    <td>@Model.Capacity</td>
                                </tr>
                                <tr>
                                    <td class="r-o">Bed:</td>
                                    <td>@Model.Bed</td>
                                </tr>
                                <tr>
                                    <td class="r-o">Services:</td>
                                    <td>@Model.Services</td>
                                </tr>
                            </tbody>
                        </table>
                        <p class="f-para">
                            @Model.Description
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="room-booking">
                    <h3>Your Reservation</h3>
                    <form action="#">
                        <input type="hidden" id="txtRoomType" value="@Model.ID" />
                        <div class="check-date">
                            <label>Check In:</label>
                            <input type="text" class="date-input" id="txtCheckIn">
                            <i class="icon_calendar"></i>
                        </div>
                        <div class="check-date">
                            <label>Check Out:</label>
                            <input type="text" class="date-input" id="txtCheckOut">
                            <i class="icon_calendar"></i>
                        </div>
                        <div class="check-date">
                            <label>GuessName:</label>
                            <input type="text" class="" id="txtGuessName">
                        </div>
                        <div class="check-date">
                            <label>Email:</label>
                            <input type="text" class="" id="txtEmail">
                        </div>
                        <div class="check-date">
                            <label>PhoneNo:</label>
                            <input type="text" class="" id="txtPhoneNo">
                        </div>
                        <button type="submit" id="btnBooking">Booking</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Room Details Section End -->
